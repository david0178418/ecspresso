{
	"extends": "./tsconfig.json",
	"include": ["src/"],
	"exclude": ["src/**/*.test.ts"],
	"compilerOptions": {
		"outDir": "./dist",
		"module": "ESNext",
		"emitDeclarationOnly": true,
		"allowImportingTsExtensions": false,
		"noEmit": false,
		"declaration": true,
		"declarationDir": "./dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"rootDir": "src"
	}
}
