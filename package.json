{
	"name": "ecspresso",
	"version": "0.10.2",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"description": "A minimal Entity-Component-System library for typescript and javascript.",
	"sideEffects": false,
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./bundles/renderers/renderer2D": {
			"import": "./dist/bundles/renderers/renderer2D.js",
			"types": "./dist/bundles/renderers/renderer2D.d.ts"
		},
		"./bundles/utils/timers": {
			"import": "./dist/bundles/utils/timers.js",
			"types": "./dist/bundles/utils/timers.d.ts"
		},
		"./bundles/utils/transform": {
			"import": "./dist/bundles/utils/transform.js",
			"types": "./dist/bundles/utils/transform.d.ts"
		},
"./bundles/utils/bounds": {
			"import": "./dist/bundles/utils/bounds.js",
			"types": "./dist/bundles/utils/bounds.d.ts"
		},
		"./bundles/utils/collision": {
			"import": "./dist/bundles/utils/collision.js",
			"types": "./dist/bundles/utils/collision.d.ts"
		},
		"./bundles/utils/input": {
			"import": "./dist/bundles/utils/input.js",
			"types": "./dist/bundles/utils/input.d.ts"
		},
		"./bundles/utils/camera": {
			"import": "./dist/bundles/utils/camera.js",
			"types": "./dist/bundles/utils/camera.d.ts"
		},
		"./bundles/utils/physics2D": {
			"import": "./dist/bundles/utils/physics2D.js",
			"types": "./dist/bundles/utils/physics2D.d.ts"
		},
		"./bundles/utils/state-machine": {
			"import": "./dist/bundles/utils/state-machine.js",
			"types": "./dist/bundles/utils/state-machine.d.ts"
		},
		"./bundles/utils/tween": {
			"import": "./dist/bundles/utils/tween.js",
			"types": "./dist/bundles/utils/tween.d.ts"
		},
		"./bundles/utils/diagnostics": {
			"import": "./dist/bundles/utils/diagnostics.js",
			"types": "./dist/bundles/utils/diagnostics.d.ts"
		},
		"./bundles/utils/spatial-index": {
			"import": "./dist/bundles/utils/spatial-index.js",
			"types": "./dist/bundles/utils/spatial-index.d.ts"
		},
		"./math": {
			"import": "./dist/math.js",
			"types": "./dist/math.d.ts"
		}
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/david0178418/ecspresso"
	},
	"keywords": [
		"game",
		"gamedev",
		"game development",
		"game engine",
		"game development",
		"entity component system",
		"web games",
		"ecs"
	],
	"devDependencies": {
		"@types/bun": "latest",
		"@types/three": "^0.180.0",
		"pixi.js": "^8.15.0",
		"three": "^0.180.0"
	},
	"peerDependencies": {
		"typescript": "^5.9.2",
		"pixi.js": "^8.0.0"
	},
	"peerDependenciesMeta": {
		"pixi.js": {
			"optional": true
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build:clean": "rm -rf dist",
		"build:ts": "bun tsc -p tsconfig.build.json",
		"build:js": "bun scripts/build.ts",
		"build": "bun build:clean && bun build:ts && bun build:js",
		"check:types": "bun tsc --noEmit --skipLibCheck",
		"check": "bun run check:types && bun test",
		"examples": "bun ./examples/serve-examples.ts",
		"prepublishOnly": "bun run check && bun run build"
	},
	"type": "module"
}
