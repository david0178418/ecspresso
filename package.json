{
	"name": "ecspresso",
	"version": "0.0.0",
	"main": "src/index.ts",
	"module": "src/index.ts",
	"devDependencies": {
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"description": "A simple ECS library for Bun",
	"files": [
		"dist"
	],
	"scripts": {
		"build:clean": "rm -rf dist",
		"build:ts": "bun run build.ts",
		"build:types": "bun tsc -p tsconfig.build.json",
		"build": "bun build:ts && bun build:types",
		"prepublishOnly": "bun build:clean && bun build"
	},
	"type": "module"
}