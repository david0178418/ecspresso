{
	"name": "ecspresso",
	"version": "0.0.1",
	"main": "src/index.ts",
	"module": "src/index.ts",
	"description": "A minimal Entity-Component-System library for typescript and javascript.",
	"repository": {
		"type": "git",
		"url": "https://github.com/david0178418/ecspresso"
	},
	"keywords": [
		"game",
		"gamedev",
		"game development",
		"game engine",
		"game development",
		"entity component system",
		"web games",
		"ecs"
	],
	"devDependencies": {
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build:clean": "rm -rf dist",
		"build:types": "bun tsc -p tsconfig.build.json",
		"build:ts": "bun build --target=browser --sourcemap=linked --minify --outdir=dist src/index.ts",
		"build": "bun build:clean && bun build:ts && bun build:types",
		"prepublishOnly": "bun run build"
	},
	"type": "module"
}