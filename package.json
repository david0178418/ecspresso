{
	"name": "ecspresso",
	"version": "0.11.0",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"description": "A minimal Entity-Component-System library for typescript and javascript.",
	"sideEffects": false,
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./bundles/renderers/renderer2D": {
			"import": "./dist/bundles/renderers/renderer2D.js",
			"types": "./dist/bundles/renderers/renderer2D.d.ts"
		},
		"./bundles/bounds": {
			"import": "./dist/bundles/bounds.js",
			"types": "./dist/bundles/bounds.d.ts"
		},
		"./bundles/camera": {
			"import": "./dist/bundles/camera.js",
			"types": "./dist/bundles/camera.d.ts"
		},
		"./bundles/collision": {
			"import": "./dist/bundles/collision.js",
			"types": "./dist/bundles/collision.d.ts"
		},
		"./bundles/diagnostics": {
			"import": "./dist/bundles/diagnostics.js",
			"types": "./dist/bundles/diagnostics.d.ts"
		},
		"./bundles/input": {
			"import": "./dist/bundles/input.js",
			"types": "./dist/bundles/input.d.ts"
		},
		"./bundles/physics2D": {
			"import": "./dist/bundles/physics2D.js",
			"types": "./dist/bundles/physics2D.d.ts"
		},
		"./bundles/spatial-index": {
			"import": "./dist/bundles/spatial-index.js",
			"types": "./dist/bundles/spatial-index.d.ts"
		},
		"./bundles/state-machine": {
			"import": "./dist/bundles/state-machine.js",
			"types": "./dist/bundles/state-machine.d.ts"
		},
		"./bundles/timers": {
			"import": "./dist/bundles/timers.js",
			"types": "./dist/bundles/timers.d.ts"
		},
		"./bundles/transform": {
			"import": "./dist/bundles/transform.js",
			"types": "./dist/bundles/transform.d.ts"
		},
		"./bundles/tween": {
			"import": "./dist/bundles/tween.js",
			"types": "./dist/bundles/tween.d.ts"
		},
		"./bundles/audio": {
			"import": "./dist/bundles/audio.js",
			"types": "./dist/bundles/audio.d.ts"
		},
		"./bundles/sprite-animation": {
			"import": "./dist/bundles/sprite-animation.js",
			"types": "./dist/bundles/sprite-animation.d.ts"
		}
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/david0178418/ecspresso"
	},
	"keywords": [
		"game",
		"gamedev",
		"game development",
		"game engine",
		"game development",
		"entity component system",
		"web games",
		"ecs"
	],
	"devDependencies": {
		"@types/bun": "latest",
		"@types/howler": "^2.2.12",
		"@types/three": "^0.180.0",
		"howler": "^2.2.0",
		"pixi.js": "^8.15.0",
		"three": "^0.180.0"
	},
	"peerDependencies": {
		"typescript": "^5.9.2",
		"pixi.js": "^8.0.0",
		"howler": "^2.2.0"
	},
	"peerDependenciesMeta": {
		"pixi.js": {
			"optional": true
		},
		"howler": {
			"optional": true
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build:clean": "rm -rf dist",
		"build:ts": "bun tsc -p tsconfig.build.json",
		"build:js": "bun scripts/build.ts",
		"build": "bun build:clean && bun build:ts && bun build:js",
		"check:types": "bun tsc --noEmit --skipLibCheck",
		"check": "bun run check:types && bun test",
		"examples": "bun ./examples/serve-examples.ts",
		"prepublishOnly": "bun run check && bun run build"
	},
	"type": "module"
}
